{
  "name": "gamesalad",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "serve": "vite --mode production",
    "clean": "pnpm rimraf dist/",
    "cap": "pnpm cap:build && pnpm cap:sync",
    "cap:build": "pnpm clean && vite build",
    "cap:sync": "npx cap sync android",
    "cap:open": "npx cap open android",
    "cap:run": "npx cap run android",
    "cap:live": "pnpm build && npx cap sync android && npx cap run android -l --external",
    "android": "pnpm cap && pnpm cap:open",
    "android:dev": "pnpm cap:build && pnpm cap:sync && pnpm cap:run",
    "android:live": "pnpm cap:live",
    "android:clean": "cd android && gradlew clean && cd ..",
    "android:release": "cd android && gradlew assembleRelease && cd ..",
    "update": "pnpm update --latest && pnpm cap:sync",
    "reset": "pnpm clean && pnpm install && pnpm cap:sync",
    "lint": "eslint ./src/",
    "lint:fix": "eslint ./src/ --fix",
    "lint:js": "eslint ./src/ --ext .js",
    "lint:css": "stylelint \"./src/styles/*.css\"",
    "extract-fonts": "node scripts/extract-fonts.js",
    "find-duplicates": "jscpd ./src",
    "dry-check": "pnpm find-duplicates && pnpm lint:js"
  },
  "dependencies": {
    "@capacitor/android": "latest",
    "@capacitor/app": "latest",
    "@capacitor/core": "latest",
    "@capacitor/haptics": "latest",
    "@capacitor/local-notifications": "latest",
    "@capacitor/preferences": "^7.0.0",
    "@capacitor/status-bar": "latest",
    "canvas-confetti": "latest"
  },
  "devDependencies": {
    "@capacitor/cli": "latest",
    "@eslint/js": "latest",
    "eslint": "^9.21.0",
    "eslint-plugin-sonarjs": "latest",
    "globals": "latest",
    "http-server": "latest",
    "jscpd": "^4.0.5",
    "lightningcss": "latest",
    "rimraf": "latest",
    "stylelint": "latest",
    "stylelint-config-recess-order": "latest",
    "stylelint-config-standard": "latest",
    "vite": "^6.2.0"
  }
}
